[Unit]
Description=Squid metrics exporter
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
# EnvironmentFile=/etc/default/squid-exporter
ExecStart=/usr/bin/squid-exporter $ARGS
ExecReload=/bin/kill -HUP $MAINPID
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
